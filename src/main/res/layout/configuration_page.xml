<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:fillViewport="true"
            android:layout_height="match_parent"
            android:layout_width="match_parent" >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical">

        <LinearLayout android:id="@+id/default_page_layout"
                android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:descendantFocusability="blocksDescendants">

            <CheckBox android:id="@+id/default_page"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:enabled="false"/>

            <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/set_as_default"/>

        </LinearLayout>

        <Button
            android:id="@+id/dont_use"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/dont_use" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                          android:layout_weight="1" android:orientation="vertical"
                          android:paddingLeft="10dp" >
                <Button
                        android:id="@+id/use_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/timeline" />

                <Button
                        android:id="@+id/use_mentions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mentions" />

                <Button
                        android:id="@+id/use_dms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/direct_messages" />
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                          android:layout_weight="1" android:orientation="vertical"
                          android:paddingRight="10dp">
                <Button
                        android:id="@+id/use_pics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pictures" />

                <Button
                        android:id="@+id/use_links"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/links" />

                <Button
                        android:id="@+id/use_fav_users"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite_users" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/use_list"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/list_page" />

        <com.klinker.android.twitter.manipulations.widgets.HoloTextView
            android:id="@+id/current"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>